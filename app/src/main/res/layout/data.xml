<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.thilinaprasad.easyservice.MainActivity$PlaceholderFragment"
    android:background="@drawable/data_back">

    <Button
        android:id="@+id/dataBtn1"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginTop="97dp"
        android:background="@drawable/day1_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>

    <Button
        android:id="@+id/dataBtn2"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:background="@drawable/day3_btn"
        android:layout_below="@+id/dataBtn1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>

    <Button
        android:id="@+id/dataBtn3"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:background="@drawable/day7_btn"
        android:layout_below="@+id/dataBtn2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>

    <Button
        android:id="@+id/dataBtn4"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dataBtn3"
        android:layout_marginTop="20dp"
        android:background="@drawable/day21_btn"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>
</RelativeLayout>
