<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.thilinaprasad.easyservice.MainActivity$PlaceholderFragment"
    android:background="@drawable/others_back">

    <Button
        android:id="@+id/balanceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:background="@drawable/balance_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>

    <Button
        android:id="@+id/loanBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loan_btn"
        android:layout_below="@+id/balanceBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>

    <Button
        android:id="@+id/myInfoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/myinfo_btn"
        android:layout_below="@+id/loanBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>

    <Button
        android:id="@+id/customerCareBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/customer_care"
        android:layout_below="@+id/myInfoBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>
</RelativeLayout>
